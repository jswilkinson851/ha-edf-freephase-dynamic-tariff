# .coveragerc
[run]
branch = True
source =
    custom_components/edf_freephase_dynamic_tariff
omit =
    */__init__.py
    */const.py
    */manifest.json
    */translations/*
    */tests/*

[report]
show_missing = True
skip_covered = False
precision = 2

exclude_lines =
    # Don't complain about defensive code
    pragma: no cover
    raise NotImplementedError
    if __name__ == .__main__.:

[html]
directory = coverage_html